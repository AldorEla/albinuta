{% set default_selected = '' %}
{% set dark_selected = '' %}
{% set light_selected = '' %}
{% if app.request.cookies.get('colour-theme')|length and app.request.cookies.get('colour-theme') ==  '/bundles/albfrontend/css/style.css' %}
    {% set default_selected = ' selected' %}
{% endif %}
{% if app.request.cookies.get('colour-theme')|length and app.request.cookies.get('colour-theme') ==  '/bundles/albfrontend/css/colour-theme/theme-dark.css' %}
    {% set dark_selected = ' selected' %}
{% endif %}
{% if app.request.cookies.get('colour-theme')|length and app.request.cookies.get('colour-theme') ==  '/bundles/albfrontend/css/colour-theme/theme-light.css' %}
    {% set light_selected = ' selected' %}
{% endif %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/css/narrow-jumbotron.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/third-party/jquery.bxslider/jquery.bxslider.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/third-party/font-awesome-4.7.0/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/third-party/colorbox/colorbox.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/third-party/DataTables/datatables.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/albfrontend/css/fonts.css') }}" />
        {% if app.request.cookies.get('colour-theme')|length %}
            <link class="js-colour-theme" rel="stylesheet" href="{{ app.request.cookies.get('colour-theme') }}" />
        {% else %}
            <link class="js-colour-theme" rel="stylesheet" href="{{ asset('bundles/albfrontend/css/style.css') }}" />
        {% endif %}

        <!-- CSS rules for styling the element inside the editor such as p, h1, h2, etc. -->
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/tether.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/albfrontend/third-party/colorbox/jquery.colorbox-min.js') }}"></script>
            <script src="{{ asset('bundles/albfrontend/third-party/DataTables/datatables.js') }}"></script>
            <script src="{{ asset('bundles/albfrontend/third-party/jquery.bxslider/jquery.bxslider.min.js') }}"></script>
            <script src="{{ asset('bundles/albfrontend/js/script.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid top-navigation">
            <div class="row">
                <div class="col">
                    <div class="header clearfix">
                        <span class="js-hamburger hamburger" data-closed="&#10005;" data-open="&#9776;">&#9776;</span>
                        <nav>
                            {% set active_stories = "" %}
                            {% if app.request.get('_route') == 'story_index' %}
                                {% set active_stories=" active" %}
                            {% endif %}
                            {% set active_price_hunter="" %}
                            {% if app.request.get('_route') == 'price_hunter_index' %}
                                {% set active_price_hunter = " active" %}
                            {% endif %}
                            <ul class="nav nav-pills float-right">
                                <li class="nav-item">
                                    <a class="nav-link{{active_stories}}" href="{{ path('story_index') }}">Stories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link{{active_price_hunter}}" href="{{ path('price_hunter_index') }}">Price Hunter</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                                </li>
                            </ul>
                        </nav>
                        <h3 class="text-muted"><a title="Albinuta's Home" class="logo" href="{{ path('alb_frontend_homepage') }}"><img height="57" src="/images/bee-gif.gif" /> Albinuta</a></h3>
                    </div>
                </div>
            </div>
        </div>
        <main>{% block body %}{% endblock %}</main>
        <aside class="change-theme-container" title="Change Colour Theme">
            <select class="form-control js-change-colour-theme">
                <option{{ default_selected }} value="/bundles/albfrontend/css/style.css">Default Theme</option>
                <option{{ dark_selected }} value="/bundles/albfrontend/css/colour-theme/theme-dark.css">Dark Theme</option>
                <option{{ light_selected }} value="/bundles/albfrontend/css/colour-theme/theme-light.css">Light Theme</option>
            </select>&nbsp;&nbsp;<img src="{{ asset('bundles/albfrontend/images/defaults/palette-icon.png') }}" height="25" />
        </aside>
        <footer class="footer">
            <p>&copy; Albinuta {{ "now"|date("Y") }}</p>
        </footer>
    </body>
</html>
