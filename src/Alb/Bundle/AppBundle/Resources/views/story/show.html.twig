{% extends 'frontend.html.twig' %}

{% block body %}
    <div class="hero-banner js-hero-banner-container">
        <img src="{{ story_upload_destination }}{{ story.image }}" alt="{{ story.title }}" width="100%" />
    </div>
    <div class="container show-page inner-page position-relative">
        <ul class="sticked-actions">
            <li>
                <a title="Back to stories list" class="btn btn-secondary" href="{{ path('story_index') }}"><i class="fa fa-list"></i></a>
            </li>
            <li>
                {% if is_granted('ROLE_ADMIN') %}
                    <a title="Edit story" class="btn btn-success" href="{{ path('story_edit', { 'id': story.id }) }}"><i class="fa fa-edit"></i></a>
                {% endif %}
            </li>
        </ul>
        <div class="row flex-column-reverse flex-lg-row">
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 padding-top-30">
                <div>
                    <div class="video-box position-relative margin-bottom-15">
                        <div class="field-icon">
                            <i class="fa fa-file-video-o fa-lg" aria-hidden="true"></i>
                        </div>
                        <iframe width="100%" height="100%" class="iframe-video" src="{{ story.video }}" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <div class="video-box position-relative">
                        <div class="field-icon">
                            <i class="fa fa-file-image-o fa-lg" aria-hidden="true"></i>
                        </div>
                        <a href="{{ story_upload_destination }}{{ story.image }}" class="colorbox"><img src="{{ story_upload_destination }}{{ story.image }}" alt="{{ story.title }}" width="100%" /></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <h1>
                    <span class="text-uppercase">{{ story.title }}</span>
                    <br />
                    <span class="title-filters">
                        Video Genre: <strong>{{ story.genre ? story.genre : '-' }}</strong> | 
                        Video Type: <strong>{{ story.type ? story.type : '-' }}</strong> | 
                        Recommended Age: <strong>{{ story.recommendedAge ? story.recommendedAge : '-' }}</strong> | 
                        Video Langugage: <strong>{{ story.language ? story.language : '-' }}</strong>
                    </span>
                </h1>
                {{ story.content|raw }}
            </div>
        </div>
    </div> <!-- /container -->
{% endblock %}
