{% extends "frontend.html.twig" %}

{% block title %}Welcome to Albinuta{% endblock %}

{% block body %}
	<div class="jumbotron home-bg">
		<div class="container">
			<ul class="js-video-slider margin-bottom-negative-30">
				{% for story in stories %}
			  		<li>
				      	<h2>{{ story.title }}</h2>
						<div class="video-container">
							<iframe width="100%" height="100%" class="iframe-video" src="{{ story.video }}" frameborder="0" allowfullscreen></iframe>
						</div>
			  		</li>
			  	{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container">
      	<h1 class="text-uppercase">Welcome to Albinuta</h1>
      	<div class="row saved-videos">
      		{% for story in stories %}
      			<div class="col-lg-4">
      				<div class="video-box">
	      				<div class="video-container">
	      					<iframe width="100%" height="100%" class="iframe-video" src="{{ story.video }}" frameborder="0" allowfullscreen></iframe>
	      				</div>
		      			<h5><a title="{{ story.title|trim }}" href="{{ path('story_show', { 'id': story.id }) }}">{{ story.title|trim }}</a></h5>
	      				<div class="details-box" data-eq-height>
		      				<p>{{ story.content|striptags|length > 175 ? story.content|striptags|slice(0, 175) ~ '...' : story.content|striptags  }}</p>
		      			</div>
	      			</div>
            	</div>
        	{% endfor %}
      	</div>

		<div class="clock-static">
			<div class="clock-container">
				<ul class="clock-hours">
					<li class="hour hour-1" data-hour="1"></li>
					<li class="hour hour-2" data-hour="2"></li>
					<li class="hour hour-3" data-hour="3"></li>
					<li class="hour hour-4" data-hour="4"></li>
					<li class="hour hour-5" data-hour="5"></li>
					<li class="hour hour-6" data-hour="6"></li>
					<li class="hour hour-7" data-hour="7"></li>
					<li class="hour hour-8" data-hour="8"></li>
					<li class="hour hour-9" data-hour="9"></li>
					<li class="hour hour-10" data-hour="10"></li>
					<li class="hour hour-11" data-hour="11"></li>
					<li class="hour hour-12" data-hour="12"></li>
				</ul>
				<div class="arrows-container">
					<div class="arrow arrow-hours"></div>
					<div class="arrow arrow-minutes"></div>
					{# <div class="arrow arrow-seconds"></div> #}
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {
				setTimeForAnalogClock();

				setInterval(function() {
					setTimeForAnalogClock();
				}, 100);
			});
		</script>
		{# <div id="googleCSE"></div> #}
		<br /><br />

      	{{ render(controller( 'AlbAppBundle:Playlist:youtubePlaylist', {'type': 'youtube'} )) }}
    </div> <!-- /container -->
{% endblock %}
